<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back"
    tools:context="com.example.relang.English">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <!--<TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/osnovi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/_osnovi" />

            <ImageButton
                android:id="@+id/obsh_fraz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/osnovi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@color/back"
                android:src="@drawable/_frazy_none"
                />

        <LinearLayout
            android:id="@+id/flag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/obsh_fraz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:layout_marginTop="30dp"
                android:src="@drawable/_eat_none"
                android:layout_marginEnd="130dp"/>
            <ImageButton
                android:id="@+id/animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:src="@drawable/_animal_none"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/back"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/flag_1"
            android:src="@drawable/_many_none"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/flag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/many"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="130dp"
                android:src="@drawable/_clothes_none"/>
            <ImageButton
                android:id="@+id/_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:layout_marginTop="30dp"
                android:src="@drawable/_colors_none"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/flag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flag_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="90dp">
            <ImageButton
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="130dp"
                android:src="@drawable/_question_none"/>
            <ImageButton
                android:id="@+id/union"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/back"
                android:layout_marginTop="30dp"
                android:src="@drawable/_souz_none"/>
        </LinearLayout>






    </RelativeLayout>
</ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint = "@color/bottom_navigation_item_background_colors"
        app:itemTextColor = "@color/bottom_navigation_item_background_colors"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
